<Metro:UserControl  x:Class="Xh.FastTrading.Wpf.Views.UnitManage.VoidUnitView"
             xmlns:Metro="http://schemas.microsoft.com/netfx/2009/xaml/presentation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:Xh.FastTrading.Wpf.Views.UnitManage"
             DataContext="{Binding Source={StaticResource Locator},Path=EntrustSummary}"
             mc:Ignorable="d" 
             d:DesignWidth="1100"
             Style="{DynamicResource UserControl_Shadow}" Height="81">
    <Metro:UserControl.Resources>
        <Style x:Key="BtnInfoStyle" TargetType="Button">
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#0097A7"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" SnapsToDevicePixels="True">
                            <TextBlock Text="{TemplateBinding Content}" Foreground="{TemplateBinding Foreground}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0097A7"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0097A7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="DatePickerTextBox">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <TextBox Text="{Binding Path=SelectedDate, StringFormat='yyyy/MM/dd', RelativeSource={RelativeSource AncestorType=DatePicker}}" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Metro:UserControl.Resources>

    <Grid >
        <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal"  VerticalAlignment="Top"  Margin="10 10"  >
                <Label Content="异常委托"  HorizontalAlignment="Left" Foreground="#A1A28D" FontSize="23" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right"  VerticalAlignment="Top"  Margin="10 10"  >
                <Button Content="当日" 
                        Command="{Binding WhenDayCommand}"
                        HorizontalAlignment="Right" 
                        Style="{StaticResource BtnInfoStyle}"
                        Background="#F5F5F5"
                        VerticalAlignment="Stretch" 
                        Width="80"
                        Height="40" 
                        Margin="320,0,0,0"/>
                <Button Content="当月" 
                        Command="{Binding WhenMonthCommand}"
                        HorizontalAlignment="Right" 
                        Style="{StaticResource BtnInfoStyle}"
                        Background="#F5F5F5"  
                        VerticalAlignment="Stretch"
                        Width="80" 
                        Height="40" 
                        Margin="20,0,0,0"/>
                <DatePicker Text="{Binding ValidateUI.FromTime,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" 
                            Width="86"
                            VerticalAlignment="Stretch"
                            Margin="20 5 0 0"/>
            <Label Content="～" FontSize="27"/>
                <DatePicker Text="{Binding ValidateUI.ToTime,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                            Width="86" 
                            VerticalAlignment="Stretch"
                            Margin="20 5 20 0" 
                            Height="31"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button HorizontalAlignment="Right"
                        Command="{Binding RefreshCommand}"  
                        Content="刷新"
                        Width="90" 
                        Background="#FFCCBC" 
                        Style="{StaticResource BtnInfoStyle}"
                        FontSize="14" />
                <Button HorizontalAlignment="Right"
                        Command="{Binding ExcelCommand}"
                        Content="导出" 
                        Width="90"
                        Background="#FFCCBC" 
                        Style="{StaticResource BtnInfoStyle}"  
                        FontSize="14"
                        Margin="5,0,0,0" />
            </StackPanel>
    </Grid>
    </Grid>
</Metro:UserControl>
